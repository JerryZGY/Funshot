    <c:KinectRegion Name="KinectRegion">
        <Grid>
            <Grid Name="Grid_StartPage">
                <Grid.RenderTransform>
                    <TranslateTransform/>
                </Grid.RenderTransform>
                <Image Name="Image_StartBackground" Source="Resources\CYCU8.jpg" Stretch="UniformToFill">
                    <Image.Effect>
                        <BlurEffect Radius="100"/>
                    </Image.Effect>
                </Image>
                <Canvas Name="Canvas_EllipseAnimation" Opacity="0"/>
                <Image Name="Image_StartForeground" Source="Resources/start.png" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill" Opacity="0.8">
                    <Image.Effect>
                        <BlurEffect Radius="100"/>
                    </Image.Effect>
                </Image>
                <Grid Name="Grid_StartTitle" Opacity="0">
                    <Grid.RenderTransform>
                        <TranslateTransform/>
                    </Grid.RenderTransform>
                    <TextBlock Text="KINECT 拍拍" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="130" Foreground="Purple">
                        <TextBlock.Effect>
                            <BlurEffect Radius="20" KernelType="Box"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <TextBlock Text="KINECT 拍拍" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="130" Foreground="White"/>
                </Grid>
                <Button Name="Button_Start"  Content="開始拍拍" Style="{DynamicResource TileButtonStyle}" IsHitTestVisible="False" Click="Button_Start_Click">
                    <Button.RenderTransform>
                        <TranslateTransform Y="500"/>
                    </Button.RenderTransform>
                </Button>
            </Grid>
            <Grid Name="Grid_MainPage" Background="Black">
                <Grid.RenderTransform>
                    <TranslateTransform Y="768"/>
                </Grid.RenderTransform>
                <Grid.RowDefinitions>
                    <RowDefinition Height="144"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="Resources/header.png" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Fill"/>
                <Grid Grid.Row="1" Grid.RowSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Button Grid.Column="0" Grid.Row="0" Name="Button_Screenshot" Content="拍攝照片" Style="{DynamicResource TileButtonStyle}" Click="Button_Screenshot_Click">
                        <Button.RenderTransform>
                            <TranslateTransform/>
                        </Button.RenderTransform>
                    </Button>
                    <Button  Grid.Column="0" Grid.Row="1" Name="Button_AddIcon" Content="新增貼圖" Style="{DynamicResource TileButtonStyle}" Click="Button_AddIcon_Click">
                        <Button.RenderTransform>
                            <TranslateTransform/>
                        </Button.RenderTransform>
                    </Button>
                    <Button  Grid.Column="0" Grid.Row="2" Name="Button_ClearIcon" Content="清除貼圖" Style="{DynamicResource TileButtonStyle}" Click="Button_ClearIcon_Click">
                        <Button.RenderTransform>
                            <TranslateTransform/>
                        </Button.RenderTransform>
                    </Button>
                    <Button  Grid.Column="0" Grid.Row="2" Name="Button_Again" Content="再玩一次" Style="{DynamicResource TileButtonStyle}" Click="Button_Again_Click">
                        <Button.RenderTransform>
                            <TranslateTransform X="-300"/>
                        </Button.RenderTransform>
                    </Button>
                    <Image Grid.Column="1" Grid.RowSpan="3" Name ="Image_Background" Source="Resources\CYCU0.jpg" Stretch="Fill"/>
                    <Image Grid.Column="1" Grid.RowSpan="3" Name ="Image_BackgroundRemoval" Source="{Binding ImageSource}" Stretch="Fill"/>
                    <Canvas Grid.Column="1" Grid.RowSpan="3" Name ="canvas" Background="Transparent" MouseLeftButtonDown="CanvasMouseLeftButtonDown" MouseLeftButtonUp="CanvasMouseLeftButtonUp" MouseMove="CanvasMouseMove"/>
                    <Image Grid.Column="1" Grid.RowSpan="3" Name ="Image_Result" Stretch="Fill"/>
                    <Image Grid.Column="2" Name="Image_UserView" Source="{Binding BodyIndexImageSource}" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                    <Button  Grid.Column="2" Grid.Row="1" Name="Button_ChangeBackground" Content="更換背景" Style="{DynamicResource TileButtonStyle}" Click="Button_ChangeBackground_Click">
                        <Button.RenderTransform>
                            <TranslateTransform/>
                        </Button.RenderTransform>
                    </Button>
                    <Button  Grid.Column="2" Grid.Row="1" Name="Button_BrowseFanPage" Content="瀏覽專頁" Style="{DynamicResource TileButtonStyle}" Click="Button_BrowseFanPage_Click">
                        <Button.RenderTransform>
                            <TranslateTransform X="300"/>
                        </Button.RenderTransform>
                    </Button>
                    <Image Grid.Column="2" Grid.Row="0" Name="Image_QrCode" Width="120" Height="120">
                        <Image.RenderTransform>
                            <TranslateTransform X="300"/>
                        </Image.RenderTransform>
                    </Image>
                    <Image Grid.Column="2" Grid.Row="0" Name="Image_FBQrCode" Width="120" Height="120">
                        <Image.RenderTransform>
                            <TranslateTransform X="300"/>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
                <ScrollViewer Grid.Row="2" Name="ScrollViewer" Height="0" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled" Style="{DynamicResource ScrollViewerStyle}">
                    <WrapPanel Name="WrapPanel" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </ScrollViewer>
                <Grid Name="Grid_Opaque" Grid.Row="1" Grid.RowSpan="2" Background="#00000000" IsHitTestVisible="False">
                    <Label Name="Label_Counter" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" FontSize="130" Foreground="White"/>
                    <Controls:ProgressRing Name="ProgressRing" Width="80" Height="80" Foreground="White" IsActive="False"/>
                </Grid>
            </Grid>
        </Grid>
    </c:KinectRegion>
</Window>